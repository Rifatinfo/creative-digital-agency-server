generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String     @id @default(uuid())
  name      String?
  email     String     @unique
  profilePhoto String?
  role      UserRole   @default(CLIENT)
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  status    UserStatus @default(ACTIVE)
  // stripeCustomerId String? @unique
  admin     Admin?
  customer   Customer?


  @@map("user")

}

model Admin {
  id String @id @default(uuid())
  email String @unique
  name  String?
  profilePhoto String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [email] , references: [email])
  
  @@map("admin")
}


model Customer {
  id           String   @id @default(uuid())
  email        String  @unique
  phone        String?
  name         String?
  address      String?
  profilePhoto String?
  isDeleted    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [email] , references: [email])

  @@map("student")
}

enum UserRole {
  ADMIN
  CLIENT
}

enum UserStatus {
  ACTIVE
  INACTIVE
}